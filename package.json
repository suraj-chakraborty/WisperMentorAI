{
  "name": "whispermentor-ai",
  "version": "0.1.0",
  "private": true,
  "description": "WhisperMentor AI â€” Private real-time AI co-mentor for any video call",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "npm run dev --workspace=apps/desktop",
    "dev:backend": "npm run start:dev --workspace=apps/backend",
    "build:desktop": "npm run build --workspace=apps/desktop",
    "build:backend": "npm run build --workspace=apps/backend",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
