        "react-markdown": "^10.1.0",
        "socket.io-client": "^4.7.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.0",
        "electron": "^29.0.0",
        "electron-builder": "^24.9.0",
        "typescript": "^5.4.0",
        "vite": "^5.2.0",
        "vite-plugin-electron": "^0.29.0",
